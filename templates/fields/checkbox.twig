{% if options|length %}
	<fieldset>
		<legend class="screen-reader-text"><span>{{ label }}</span></legend>
		{% for key, option in options %}
		<label>
			<input type="checkbox" name="{{ name }}[{{ key }}]" value="1" {% if value[key] %} checked="checked"{% endif %}><span>{{ option }}</span>
		</label>
		<br>
		{% endfor %}
	</fieldset>
{% else %}
	<input type="checkbox" name="{{ name }}" value="1" id="{{ id }}"{% if value %} checked="checked"{% endif %}>
{% endif %}